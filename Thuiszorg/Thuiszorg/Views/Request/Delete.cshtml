@model Thuiszorg.Models.Request

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<fieldset>
    <legend></legend>

    <div class="display-label">
         <b>@Html.Label("Naam")</b>
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.user)
    </div>

    <div class="display-label">
         <b>@Html.Label("Taak")</b>
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.title)
    </div>

    <div class="display-label">
         <b>@Html.Label("Beschrijving")</b>
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.description)
    </div>

    <div class="display-label">
         <b>@Html.Label("Hulp nodig om")</b>
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.dateAndTimeRequest)
    </div>

    <div class="display-label">
        <b>@Html.Label("Toegevoegd om")</b> 
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.dateAndTimeAdded)
    </div>

    <div class="display-label">
         <b>@Html.Label("Status")</b>
    </div>
    <div class="display-field">
         @Html.DisplayFor(model => model.completed)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Terug naar taken overzicht", "Index")
    </p>
}
